<%= form_for @commentary, :html => { :class => "form-horizontal commentary" } do |f| %>

  <% if @commentary.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@commentary.errors.count, "error") %> prohibited this commentary from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @commentary.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :comment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :comment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comment) %>
  </div>

  <%= f.hidden_field :maze_id, :value => @maze.id %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                forum_index_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
