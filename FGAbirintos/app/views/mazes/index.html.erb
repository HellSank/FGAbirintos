<%- model_class = Maze -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:startingPoint) %></th>
      <th><%= model_class.human_attribute_name(:endPoint) %></th>
      <th><%= model_class.human_attribute_name(:sizeMaze) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mazes.each do |maze| %>
      <tr>
        <td><%= maze.startingPoint %></td>
        <td><%= maze.endPoint %></td>
        <td><%= maze.sizeMaze %></td>
        <td><%=l maze.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      maze_path(maze), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      maze_path(maze),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
