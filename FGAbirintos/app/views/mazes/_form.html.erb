<%= form_for @maze, :html => { :class => "form-horizontal maze" } do |f| %>

  <% if @maze.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@maze.errors.count, "error") %> prohibited this maze from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @maze.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :adjacencyList, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :adjacencyList, :class => 'form-control' %>
    </div>
    <%=f.error_span(:adjacencyList) %>
  </div>
  <div class="form-group">
    <%= f.label :solutionMaze, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :solutionMaze, :class => 'form-control' %>
    </div>
    <%=f.error_span(:solutionMaze) %>
  </div>
  <div class="form-group">
    <%= f.label :startingPoint, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :startingPoint, :class => 'form-control' %>
    </div>
    <%=f.error_span(:startingPoint) %>
  </div>
  <div class="form-group">
    <%= f.label :endPoint, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :endPoint, :class => 'form-control' %>
    </div>
    <%=f.error_span(:endPoint) %>
  </div>
  <div class="form-group">
    <%= f.label :sizeMaze, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sizeMaze, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sizeMaze) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mazes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
